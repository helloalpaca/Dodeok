<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.StatusStudent">

    <LinearLayout
        android:id="@+id/status_relativelayout"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/status_student_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="이름"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/ohmnigullim050"/>

        <TextView
            android:id="@+id/status_student_emotion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="현재 감정"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/ohmnigullim050"/>

        <TextView
            android:id="@+id/status_student_light"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="감정 신호등"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/ohmnigullim050"/>

    </LinearLayout>

    <ListView
        android:id="@+id/status_listview"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_below="@id/status_relativelayout"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">
    </ListView>

</RelativeLayout>