<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/drawer_img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/emotion_1"/>

        <TextView
            android:id="@+id/drawer_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="정영찬"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ohmnigullim050" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="・・・・・"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ohmnigullim050"/>

        <TextView
            android:id="@+id/drawer_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="자랑스럽다"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ohmnigullim050"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/listview_linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/drawer_feedtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="힘내요(7)"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ohmnigullim" />

        <TextView
            android:id="@+id/drawer_feedtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="좋아요(7)"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ohmnigullim" />

        <TextView
            android:id="@+id/drawer_feedtext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="나도 그래!(7)"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ohmnigullim" />

        <TextView
            android:id="@+id/drawer_feedtext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="10dp"
            android:text="궁금해(7)"
            android:textColor="@color/black"
            android:fontFamily="@font/ohmnigullim" />

        <TextView
            android:id="@+id/drawer_feedtext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="10dp"
            android:text="넌 특별해(7)"
            android:textColor="@color/black"
            android:fontFamily="@font/ohmnigullim" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <ListView
        android:id="@+id/listview_feed"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>


</LinearLayout>