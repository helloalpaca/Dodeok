<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.JoinStudent">

    <RelativeLayout
        android:id="@+id/join_relativelayout"
        android:background="@color/black"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/join_student_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="이름"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="@font/ohmnigullim"/>

        <TextView
            android:id="@+id/join_student_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/join_student_name"
            android:gravity="center"
            android:text="아이디"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="@font/ohmnigullim"/>

        <TextView
            android:id="@+id/join_student_pw"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/join_student_id"
            android:gravity="center"
            android:text="비밀번호"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="@font/ohmnigullim"/>

        <TextView
            android:id="@+id/join_student_status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/join_student_pw"
            android:gravity="center"
            android:text="상태"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="@font/ohmnigullim"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/join_listview"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@id/join_relativelayout"
        android:layout_height="match_parent"
        android:layout_above="@id/join_btn1"
        android:layout_marginBottom="30dp">
    </ListView>

    <Button
        android:id="@+id/join_btn1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="가입승인"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ohmnigullim"
        android:onClick="onClickJoinButton1"/>

    <Button
        android:id="@+id/join_btn2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="학생삭제"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ohmnigullim"
        android:onClick="onClickJoinButton2"/>

</RelativeLayout>