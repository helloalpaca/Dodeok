<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/student_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/ohmnigullim"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/student_id"
        android:layout_toRightOf="@id/student_name"
        android:gravity="center"
        android:text="ID"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/ohmnigullim"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/student_pw"
        android:layout_toRightOf="@id/student_id"
        android:gravity="center"
        android:text="PW"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/ohmnigullim"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/student_status"
        android:layout_toRightOf="@id/student_pw"
        android:gravity="center"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/ohmnigullim"/>


</RelativeLayout>
