<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/textback"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_descriptive_back2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="#00ff0000"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onClickAnswerDescriptiveButton1"/>

    <TextView
        android:id="@+id/textview_descriptive_problem2"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="야구를 하던 민호는 그만 옆집 창문을 깨고 말았습니다.
        \n민호는 어떻게 해야할까요?"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/ohmnigullim"/>

    <TextView
        android:id="@+id/textview_descriptive_answer"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_descriptive_problem2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/ohmnigullim"/>

    <Button
        android:id="@+id/btn_descriptive_modify"
        android:layout_below="@id/textview_descriptive_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/login_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textColor="@color/white"
        android:fontFamily="@font/ohmnigullim"
        android:onClick="onClickAnswerDescriptiveButton2"/>




</RelativeLayout>