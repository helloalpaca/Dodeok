<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/textback"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_grade_back2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="#00ff0000"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onClickAnswerGradeButton1"/>

    <TextView
        android:id="@+id/textview_grade_problem2"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정직에 대하여\n고민해 보았습니까?"
        android:textSize="20dp"
        android:fontFamily="@font/ohmnigullim"/>

    <ImageView
        android:id="@+id/image_grade_star"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/textview_grade_problem2"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_grade_modify"
        android:layout_below="@+id/image_grade_star"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textColor="@color/white"
        android:fontFamily="@font/ohmnigullim"
        android:onClick="onClickAnswerGradeButton2"/>


</RelativeLayout>