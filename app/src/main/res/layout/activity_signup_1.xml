<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Both.Signup_1">

    <ImageView
        android:id="@+id/signup_img1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <RadioGroup
        android:id="@+id/signup_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/signup_edittext1"
        android:layout_below="@id/signup_img1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/signup_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="선생님" />

        <RadioButton
            android:id="@+id/signup_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학생" />

    </RadioGroup>



    <EditText
        android:id="@+id/signup_edittext1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signup_radiogroup"
        android:fontFamily="@font/ohmnigullim"
        android:hint="아이디"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/login_login_background"/>

    <EditText
        android:id="@+id/signup_edittext2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/signup_edittext1"
        android:fontFamily="@font/ohmnigullim"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/login_login_background"/>

    <EditText
        android:id="@+id/signup_edittext3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/signup_edittext2"
        android:fontFamily="@font/ohmnigullim"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/login_login_background"/>

    <CheckBox
        android:id="@+id/signup_check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_edittext3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="checkBox1"
        android:fontFamily="@font/ohmnigullim"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/signup_check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_check1"
        android:layout_centerHorizontal="true"
        android:text="checkBox2"
        android:fontFamily="@font/ohmnigullim"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signup_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button1"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/signup_check2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="가입하기"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/ohmnigullim"
        android:textColor="@color/white"
        android:onClick="onClickSignupButton1"/>

</RelativeLayout>