<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_btn_join"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/home_btn1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:fontFamily="@font/ohmnigullim050"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:onClick="onClickHomeButton1"/>

            <Button
                android:id="@+id/home_btn2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/home_btn1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:fontFamily="@font/ohmnigullim050"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:onClick="onClickHomeButton2"/>

            <Button
                android:id="@+id/home_btn3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/home_btn2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:fontFamily="@font/ohmnigullim050"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:onClick="onClickHomeButton3"/>

            <Button
                android:id="@+id/home_btn4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/home_btn3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:fontFamily="@font/ohmnigullim050"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:onClick="onClickHomeButton4"/>

            <Button
                android:id="@+id/home_btn5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/home_btn4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:fontFamily="@font/ohmnigullim050"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:onClick="onClickHomeButton5"/>

            <Button
                android:id="@+id/home_btn6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/home_btn5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:fontFamily="@font/ohmnigullim050"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:onClick="onClickHomeButton6"/>


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/home_btn_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button1"
        android:layout_marginLeft="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="학급 가입하기"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/ohmnigullim"
        android:textColor="@color/white"
        android:onClick="onClickHomeButtonJoin"/>

</RelativeLayout>